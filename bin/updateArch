#!/bin/bash

# load function
. "$WORKSPACE/bin/askYN.sh"

# ask update
if askYN $'\e[32;1mDo you update Arch env?\e[m'; then

  # update arch env
  echo -e $'\e[36;1mupdate arch env!\e[m'

  # update pacman packages
  updatePacmanPkg

  # update homeBrew packages
  updateBrewPkg

  # update go packages
  updateGoPkg

  # update github packages
  updateGitHubPkg

  # update gh extensions
  updateGhExtension

  # update volta and npm packages
  updateVoltaPkg

  # update zsh plugins
  updateZshplug

  # update pkglist
  updatePkgList

  # done!
  echo -e $'\e[32;1mdone!\e[m'

else

  # update cancelled
  echo -e $'\e[32;1mupdate cancelled\e[m'

fi
