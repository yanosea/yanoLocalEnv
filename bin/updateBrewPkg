#!/bin/bash

# update homebrew packages
echo -e $'\e[33;1mupdate brew Packages!\e[m'

## update packages
brew update

## upgrade packages
brew upgrade

## clean up
brew cleanup

## install insufficient brew packages
if [ "$OS" = "Linux" ]; then
    xargs brew install < "$HOME"/work/pkglist/archbrewpkglist.txt
elif [ "$OS" = "Darwin" ]; then
    xargs brew install < "$HOME"/work/pkglist/macbrewpkglist.txt
fi

## check health
brew doctor
