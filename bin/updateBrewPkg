#!/bin/bash
# update homebrew packages
## update packages
echo -e "\e[33;1m
update brew Packages!
\e[m"
brew update

## upgrade packages
brew upgrade

## clean up
brew cleanup

## install insufficient brew packages
if [ "$OS" = "Linux" ]; then
    xargs brew install < "$HOME"/work/pkglist/archbrewpkglist.txt
elif [ "$OS" = "Darwin" ]; then
    xargs brew install < "$HOME"/work/pkglist/macbrewpkglist.txt
fi

## check health
brew doctor
