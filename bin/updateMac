#!/opt/homebrew/bin/zsh
#
# load function
. "$WORKSPACE/bin/askYN.sh"

# ask update
if askYN $'\e[32;1mDo you update Mac env?\e[m'; then

  # update mac env
  echo -e $'\e[36;1mupdate mac env!\e[m'

  # update homebrew packages
  updateBrewPkg

  # update go packages
  updateGoPkg

  # update github packages
  updateGitHubPkg

  # update gh extensions
  updateGhExtension

  # update volta and npm packages
  updateVoltaPkg

  # update pip packages
  updatePipPkg

  # update fisher plugins
  # updateFisherPlug

  # update zsh plugins
  updateZshplug

  # update pkglist
  updatePkgList

  # done!
  echo -e $'\e[32;1mdone!\e[m'

else

  # update cancelled
  echo -e $'\e[32;1mupdate cancelled\e[m'

fi
