#!/bin/bash
# update pacman packages
## sync repository and update packages
echo -e "\e[33;1mupdate pacman packages!
\e[m"
paru -Syyu --noconfirm --skipreview

## delete cache
paru -Scc --noconfirm --skipreview

## install insufficient pacman packages
paru -S --needed --noconfirm --skipreview - < "$HOME"/work/pkglist/pacmanpkglist.txt
